<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp" >

    <LinearLayout
        android:id="@+id/left_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/sweep_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bt_navb_scan" />

        <TextView
            android:id="@+id/sweep"
            style="@style/white.12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sweep" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/center_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@+id/right_layout"
        android:layout_toRightOf="@+id/left_layout"
        android:background="@drawable/bg_navb_search_frame"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/search_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:src="@drawable/ic_navb_search" />

        <TextView
            android:id="@+id/search"
            style="@style/white.16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:background="@color/gray_ee"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:hint="@string/search_hint"
            android:textColorHint="@color/gray_a6" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/right_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/news_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bt_navb_message" />

        <TextView
            android:id="@+id/news"
            style="@style/white.12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/message" />
    </LinearLayout>

</RelativeLayout>